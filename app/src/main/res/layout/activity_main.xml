<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/taustagraffa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="364dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ylaLogo" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="372dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pelaaja 1"
                android:id="@+id/pelaajaVuoro"
                android:layout_weight="0.01" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:id="@+id/kuvaKortti"
                android:layout_gravity="center_vertical"
                android:background="@drawable/j"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.01" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#f2b936">

            <TextView
                android:layout_width="203dp"
                android:layout_height="90dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aloita painamalla korttia"
                android:id="@+id/tulosTeksti"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="0dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ohje"
                android:id="@+id/apuPainike"
                android:layout_weight="0.01"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
